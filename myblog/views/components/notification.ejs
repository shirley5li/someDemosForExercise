<!-- header模块的notification部分 -->
<div class="ui grid">
    <div class="four wide column"></div>
    <div class="eight wide column">
        <!-- success、error变量 挂载到 res.locals 下 -->
        <% if (success) { %>
            <div class="ui success message">
                <p><%= success %></p>
            </div>
        <% } %>
        <% if (error) { %>
            <div class="ui error message">
                <p><%= error %></p>
            </div>
        <% } %>
    </div>
</div>