/* pages/movies/movies.wxss  */
@import "movie-list-template/movie-list-template.wxss";
@import "movie-grid-template/movie-grid-template.wxss";

.container {
    background-color: #f2f2f2;
}

.movies-template {
    margin-bottom: 30rpx;
}

.search {
    background-color: #f2f2f2;
    height: 80rpx;
    width: 100%;
    display: flex;
    flex-direction: row;
}

.search-img {
    /* 垂直居中  */
     margin: auto 0 auto 20rpx;  
}

.search input {
    height: 100%;
    width: 600rpx;
    margin-left: 20rpx;
    font-size: 28rpx;
}

 .placeholder {
    font-size: 14px;
    color: #d1d1d1;
    margin-left: 20rpx;
}

.search-panel {
    position: absolute;
    top: 80rpx;
}

.xx-img {
    height: 25rpx;
    width: 25rpx;
    margin: auto 0 auto 10rpx;
}